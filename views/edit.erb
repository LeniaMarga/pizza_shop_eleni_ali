
<h2>
  <div class="order-list">
    <p>Name:  <%= @pizza.pretty_name %></p>
    <p>Order: <%= @pizza.quantity %> <%= @pizza.topping %></p>
    <hr>
  </div>
</h2>

<form method="post" action="/pizzas/<%= @pizza.id %>">
<input type="hidden" name="_method" value="put"/>

  <div class="field-group">
    <label for="first-name-field" class="label">First Name:</label>
    <div class="field">
      <input
        type="text"
        name="first_name"
        id="first-name-field"
        value="<%= @pizza.first_name %>"
        required
      />
   </div>
  </div>

  <div class="field-group">
    <label for="last-name-field" class="label">Last Name:</label>
    <div class="field">
      <input
        type="text"
        name="last_name"
        id="last-name-field"
        value="<%= @pizza.last_name %>"
        required
      />
    </div>
  </div>

  <div class="field-group">
    <label for="pizza-selection" class="label">Select a pizza:</label>
    <div class="field">
      <select name="topping" id="pizza-selection">
        <option value="Margherita">Margherita</option>
        <option value="Calzone">Calzone</option>
      </select>
    </div>
  </div>

  <div class="field-group">
    <label for="quantity-field" class="label">Quantity:</label>
    <div class="field">
      <input
        type="number"
        name="quantity"
        id="quantity-field"
        value="<%= @pizza.quantity %>"
        required
      />
    </div>
  </div>

  <button class="big-button button">Update Pizza Order</button>

</form>

<form method="post" action="/pizzas/<%= @pizza.id %>/delete">

  <button class="big-button button">Delete Pizza Order</button>

</form>
